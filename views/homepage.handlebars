{{#each posts as |post| }}
<div id=`post{{post.id}}` class="row align-center mb-5">
  <div class="col-md-6">
    <h2>{{post.title}}</h2>
  </div>
  <div class="col-md-6">
    <p>{{post.content}}</p>

    <h2>Comments:</h2>
    <ul>
      {{#each post.comments as |comment|}}
      <li>
        <div>
          {{comment}}
          {{comment.date_created}}
        </div>
      </li>
      <form class="form comment-form">
        <div class="form-group">
          <label for="comment-text">comment:</label>
          <input class="form-input" type="text" id="email-signup" />
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
  </div>
  </form>


  {{/each}}

  </ul>

</div>
</div>

{{/each}}